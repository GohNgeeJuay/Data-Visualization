{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "GINI coefficient in 2020",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/GohNgeeJuay/FIT3179/main/Use datasets/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/GohNgeeJuay/FIT3179/main/Use datasets/gini(use).csv"
        },
        "key": "country",
        "fields": ["2020"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "2020",
      "scale": {
        "type": "threshold",
        "domain": [30, 40, 50, 60],
        "range": [
          "#fed976",
          "#feb24c",
          "#fd8d3c",
          "#fc4e2a",
          "#e31a1c"
        ]
      },
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "2020", "type": "quantitative"}
    ]
  },
  "config": {}
}
